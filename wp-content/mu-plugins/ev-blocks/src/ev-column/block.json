{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "publifarm/column",
	"title": "Pb Column",
	"category": "text",
	"parent": [ "publifarm/columns" ],
	"description": "A single column within a columns block.",
	"textdomain": "default",
	"attributes": {
		"verticalAlignment": {
			"type": "string"
		},
		"width": {
			"type": "string"
		},
		"allowedBlocks": {
			"type": "array"
		},
		"colonneMobile": {
			"type": "number",
			"default": 12
		},
		"colonneTablet": {
			"type": "number",
			"default": 12
		},
		"colonneDesktop": {
			"type": "number",
			"default": ""
		},
		"isDefaultMb": {
			"type": "boolean",
			"default": true
		},
		"isDefaultTb": {
			"type": "boolean",
			"default": true
		},
		"isDefaultDt": {
			"type": "boolean",
			"default": true
		},
		"templateLock": {
			"type": [ "string", "boolean" ],
			"enum": [ "all", "insert", false ]
		}
	},
	"supports": {
		"anchor": true,
		"reusable": false,
		"html": false,
		"color": {
			"gradients": true,
			"link": true,
			"__experimentalDefaultControls": {
				"background": true,
				"text": true
			}
		},
		"spacing": {
			"padding": true,
			"__experimentalDefaultControls": {
				"padding": true
			}
		}
	}
}
